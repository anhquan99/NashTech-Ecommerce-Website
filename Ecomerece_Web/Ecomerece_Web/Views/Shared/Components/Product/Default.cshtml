@{
}
@model Ecomerece_Web.Data.Product
<div class="card col-md-3 col-xl-3 ProductCard">
    <a href="~/product/@Model.productNameID">
        <div class="card-body Wraper">
            <div class="HeaderButton">
                <div class="ReleaseDate">
                    <span>@Model.releaseDate</span>
                </div>
                <button class="WantButton">
                    Want
                </button>
            </div>

            <img alt="@Model.productNameID'" src="/Utility/@Model.coverImg"
                 sizes="200px" class="ProductImage">
            <div class="Detail">
                <h2 class="ProductName">@Model.productNameID</h2>
                <div class="ProductPriceDisplay">
                    <p class="ProductPrice">@Model.price</p>
                </div>
            </div>
        </div>
    </a>
</div>